<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/defeat_linearLayout"
	android:background="#90000000"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center"
	android:visibility="gone">

	<TextView
		android:id="@+id/gameover_dialog_text"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:gravity="center_horizontal"
		android:textSize="30sp"
		android:textColor="@android:color/background_light"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center">
		<Button
			android:id="@+id/restart_button"
			android:text="@string/restart"
			style="@style/GameOverButton.End"/>
		<Button
			android:id="@+id/away_button"
			android:text="@string/away"
			style="@style/GameOverButton.End"/>
	</LinearLayout>
	<TextView
		android:id="@+id/score_info_textView"
		android:text="@string/score_info"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:gravity="center_horizontal"
		android:layout_marginTop="30dp"
		android:textSize="22sp"
		android:textColor="@android:color/background_light"/>
	<Button
		android:id="@+id/add_score_button"
		android:layout_width="match_parent"
		android:text="@string/add_score"
		style="@style/GameOverButton"/>
</LinearLayout>