<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_button"
            android:id="@+id/game_button"
            android:layout_gravity="center_horizontal" android:singleLine="false"
            android:hint="@string/game_button_hint"/>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/load_button"
            android:id="@+id/load_button"
            android:layout_gravity="center_horizontal"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_button"
            android:id="@+id/settings_button" android:layout_gravity="center_horizontal"
            android:hint="@string/settings_button_hint"/>
</LinearLayout>