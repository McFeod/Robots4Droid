<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="MainMenuButton">
		<item name="android:layout_width">150dp</item>
		<item name="android:layout_height">40dp</item>
		<item name="android:layout_gravity">center_horizontal</item>
		<item name="android:background">#1D1D1D</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:layout_marginTop">10dp</item>
	</style>
	<style name="GameImageButton">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@null</item>
	</style>
	<style name="GameImageButton.Action">
		<item name="android:layout_weight">1</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#FFFFFF</item>
	</style>
	<style name="GameOverButton">
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:layout_height">50dp</item>
		<item name="android:background">#801B0000</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:layout_marginLeft">5dp</item>
	</style>
	<style name="GameOverButton.End">
		<item name="android:layout_weight">1</item>
		<item name="android:layout_width">0dip</item>
	</style>
	<style name="SettingsItem">
		<item name="android:layout_height">0dip</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_width">match_parent</item>
	</style>
</resources>
